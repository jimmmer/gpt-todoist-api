{
  "openapi": "3.1.0",
  "info": {
    "title": "GPT Todoist Integration",
    "version": "1.0.0",
    "description": "A simple API to allow a GPT to add tasks to a user's Todoist account"
  },
  "servers": [
    {
      "url": "https://gpt-todoist.onrender.com"
    }
  ],
  "paths": {
    "/add_task": {
      "post": {
        "operationId": "addTask",
        "summary": "Add a task to Todoist",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task_summary": {
                    "type": "string",
                    "description": "The title of the task"
                  },
                  "task_description": {
                    "type": "string",
                    "description": "A markdown-formatted description of the task"
                  },
                  "due_date": {
                    "type": "string",
                    "description": "Due date (e.g. 'tomorrow', 'next Friday')"
                  },
                  "labels": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Labels to apply to the task"
                  }
                },
                "required": ["task_summary"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Task successfully added"
          },
          "400": {
            "description": "Invalid request format"
          },
          "403": {
            "description": "Forbidden or unauthorized"
          }
        }
      }
    }
  }
}